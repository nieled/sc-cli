{
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "module": "ESNext",
    "target": "ES5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "isolatedModules": true,
    "noEmit": false,
    "lib": [
      "esnext",
      "es6",
      "dom"
    ],
    "strictNullChecks": true,
    "skipLibCheck": true,
  },
  "include": [
    "src",
    "test",
    "webpack",
  ],
  "exclude": [
    "node_modules"
  ]
}