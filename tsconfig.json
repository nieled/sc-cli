{
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "module": "ESNext",
    "target": "ES6",
    "jsx": "react",
    "allowJs": true,
    "checkJs": false,
    "baseUrl": "./",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "isolatedModules": true,
    "noEmit": false,
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "strictNullChecks": true,
    "skipLibCheck": true,
  },
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "node_modules"
  ]
}